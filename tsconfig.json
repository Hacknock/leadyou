{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["DOM", "ES2021"],
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
