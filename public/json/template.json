{
  "decorations": [
    {
      "title": "Project Icon",
      "required": true,
      "component": "wrap-upload-file",
      "description": "Please upload the project's icon.",
      "attributes": {
        "kindsOfFile": ["image/*"],
        "placeholder": "The size of the icon must be 64x64px."
      }
    }
  ],
  "sections": [
    {
      "title": "Project Name",
      "hiddenTitle": false,
      "required": true,
      "replacement": true,
      "multiple": false,
      "component": "wrap-oneline-field",
      "description": "Please type the project name.",
      "kindsOfValues": ["plain"],
      "format": "%s",
      "attributes": {
        "placeholder": "",
        "maxlength": 50
      },
      "script": "getProjectName.js"
    },
    {
      "title": "Badges",
      "hiddenTitle": true,
      "required": false,
      "replacement": false,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "Please input the badges.",
      "kindsOfValues": ["plain"],
      "format": "%s\n",
      "attributes": {
        "placeholder": "",
        "maxlength": 300
      },
      "script": "getBadges.js"
    },
    {
      "title": "Tags",
      "hiddenTitle": false,
      "required": true,
      "replacement": false,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "Please input the tags related to the project.",
      "kindsOfValues": ["plain"],
      "format": "`%s` ",
      "attributes": {
        "placeholder": "Tag"
      }
    },
    {
      "title": "Short Description",
      "hiddenTitle": false,
      "required": true,
      "replacement": false,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "Please write down a short description of the project.",
      "kindsOfValues": ["plain"],
      "format": "%s  \n",
      "attributes": {
        "placeholder": "具体例",
        "maxlength": 300
      },
      "script": "getShortDescription.js"
    },
    {
      "title": "Demo",
      "hiddenTitle": false,
      "required": false,
      "replacement": false,
      "multiple": true,
      "component": "wrap-upload-file",
      "description": "Please upload a resource (image/animated GIF) and input a description for a demonstration.",
      "kindsOfValues": ["filepath", "plain"],
      "format": "\n![Demo](%s)\n\n%s  \n",
      "attributes": {
        "kindsOfFile": ["image/png", "image/jpg", "image/gif"],
        "placeholder": "具体例"
      }
    },
    {
      "title": "Advantages",
      "hiddenTitle": false,
      "required": true,
      "replacement": false,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "Please describe the advantages of the project.",
      "kindsOfValues": ["plain"],
      "format": "%s  \n",
      "attributes": {
        "placeholder": "具体例"
      }
    },
    {
      "title": "Installation",
      "hiddenTitle": false,
      "required": true,
      "replacement": false,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "Please describe how to install the project.",
      "kindsOfValues": ["plain"],
      "format": "%s  \n",
      "attributes": {
        "placeholder": "具体例をあとで入れる"
      }
    },
    {
      "title": "Deployment",
      "hiddenTitle": false,
      "required": false,
      "replacement": false,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "Please describe how to deploy the project.",
      "kindsOfValues": ["plain"],
      "format": "%s  \n",
      "attributes": {
        "placeholder": "具体例"
      }
    },
    {
      "title": "Minimal Example",
      "hiddenTitle": false,
      "required": true,
      "replacement": false,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "Please illustrate a minimal implementation.",
      "kindsOfValues": ["plain"],
      "format": "%s  \n",
      "attributes": {
        "placeholder": "具体例"
      }
    },
    {
      "title": "Contributors",
      "hiddenTitle": false,
      "required": true,
      "replacement": false,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "Please input the contributors to the project.",
      "kindsOfValues": ["plain"],
      "format": "- %s\n",
      "attributes": {
        "placeholder": "Name<email-address>"
      },
      "script": "getContributors.js"
    },
    {
      "title": "Users",
      "hiddenTitle": false,
      "required": false,
      "replacement": false,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "Please input the users of the project.",
      "kindsOfValues": ["plain"],
      "format": "- %s\n",
      "attributes": {
        "placeholder": "Name<url>"
      }
    }
  ]
}
