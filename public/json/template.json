{
  "decorations": [
    {
      "title": "Project Icon",
      "required": true,
      "component": "wrap-upload-file",
      "description": "プロジェクトアイコンを入れてね。",
      "attributes": {
        "kinds_of_file": ["image/*"],
        "place_holder": "サイズは64px×64pxにしてください。"
      }
    }
  ],
  "sections": [
    {
      "title": "Project Name",
      "hidden_title": false,
      "required": true,
      "multiple": false,
      "component": "wrap-oneline-field",
      "description": "Please type project name.",
      "attributes": {
        "place_holder": "",
        "maxlength": 50
      },
      "script": "getProjectName.js"
    },
    {
      "title": "Badges",
      "hidden_title": true,
      "required": false,
      "multiple": false,
      "component": "wrap-radio",
      "description": "Do you need badge?",
      "attributes": {
        "values": ["", ""],
        "labels": ["", ""]
      },
      "script": "getBadges.js"
    },
    {
      "title": "Tags",
      "hidden_title": false,
      "required": true,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "タグ入れて",
      "attributes": {
        "place_holder": "[タグ名]"
      }
    },
    {
      "title": "Short Description",
      "hidden_title": false,
      "required": true,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "短い説明文書いてください",
      "attributes": {
        "place_holder": "具体例をあとで入れる",
        "maxlength": 300
      },
      "script": "getShortDescription.js"
    },
    {
      "title": "Demo",
      "hidden_title": false,
      "required": false,
      "multiple": true,
      "component": "wrap-upload-file",
      "description": "デモに必要な素材（画像/動画）と説明文をいれてね",
      "attributes": {
        "kinds_of_file": ["image/*", "movie/*"],
        "place_holder": "具体例をあとで入れる"
      }
    },
    {
      "title": "Advantages",
      "hidden_title": false,
      "required": true,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "利点を書いてね",
      "attributes": {
        "place_holder": "具体例をあとで入れる"
      }
    },
    {
      "title": "Installation",
      "hidden_title": false,
      "required": true,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "導入方法を記入",
      "attributes": {
        "place_holder": "具体例をあとで入れる"
      }
    },
    {
      "title": "Deployment",
      "hidden_title": false,
      "required": false,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "デプロイ方法を記入",
      "attributes": {
        "place_holder": "具体例をあとで入れる"
      }
    },
    {
      "title": "Minimal Example",
      "hidden_title": false,
      "required": true,
      "multiple": false,
      "component": "wrap-multiline-field",
      "description": "サンプルコードとかを記入",
      "attributes": {
        "place_holder": "具体例をあとで入れる"
      }
    },
    {
      "title": "Contributors",
      "hidden_title": false,
      "required": true,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "コントリビューターを記入",
      "attributes": {
        "place_holder": "Name<email-address>"
      },
      "script": "getContributors.js"
    },
    {
      "title": "Users",
      "hidden_title": false,
      "required": false,
      "multiple": true,
      "component": "wrap-oneline-field",
      "description": "OSSの利用者を記入",
      "attributes": {
        "place_holder": "Name<url>"
      }
    }
  ]
}
